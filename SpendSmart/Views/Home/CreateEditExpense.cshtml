@{
    ViewData["Title"] = "Create/Edit";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit Your Expenses</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <div class="form-group">
        <label for="Id">Id</label>
        <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" id="Id" />
    </div>
    <div class="form-group mt-4">
        <label for="Value">Value $</label>
        <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01" id="Value" />
    </div>
    <div class="form-group mt-4">
        <label for="Description">Description</label>
        <input class="form-control" type="text" placeholder="Add description" asp-for="Description" id="Description" />
    </div>
    <button class="btn btn-primary mt-4" type="submit">Submit</button>
</form>
